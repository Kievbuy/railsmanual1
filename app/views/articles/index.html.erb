<h1>List af All Articles</h1>

<%= link_to 'New Article', new_article_path, class: 'btn btn-warning' %>
<br>
<br>

<table class="table table-bordered table-hovered">
    
    <thead>
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Time of creation</th>
            <th colspan='3'></th>
        </tr>
    </thead>
    
    <tody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.text %></td>
                <td><%= article.created_at %></td>
                <td><%= link_to 'Show', article_path(article), class: 'btn btn-success' %></td>
                <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
    </tody>
    
</table>