<h1>New Article</h1>


<%= form_for :article, url: articles_path do |f| %>
  <p class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </p>
 
  <p class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control" %>
  </p>
 
  <p>
    <%= f.submit "Submit", class: "btn btn-success" %>
  </p>
<% end %>