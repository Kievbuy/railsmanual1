<h1><%= @article.title %></h1>

<p>
    <strong>Text:</strong><br>
    <%= @article.text %>
</p>

<br>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<br>


<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p class="form-group">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, class: "form-control" %>
  </p>
  <p class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %>
  </p>
  <p class="form-group">
    <%= f.submit 'Leave Comment', class: "btn btn-success btn-sm"%>
  </p>
<% end %>

<br>

<%= link_to 'List of Articles', articles_path, class: 'btn btn-primary' %>

<%= link_to 'Back', articles_path, class: 'btn btn-danger' %>